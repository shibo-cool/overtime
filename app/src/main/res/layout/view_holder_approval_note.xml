<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10">
    
    <TextView
        style="@style/text_style_20_6a3906"
        android:id="@+id/rbName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_16" />
    <TextView
        style="@style/text_style_14_323232"
        android:id="@+id/tvReasonPre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="加班理由:"
        android:layout_below="@id/rbName" />
    <TextView
        style="@style/text_style_14_323232"
        android:id="@+id/tvReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@id/tvReasonPre"
        android:lineSpacingExtra="@dimen/dp_10" />
    <View
        android:id="@+id/line"
        android:background="@color/color_e4e4e4"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@id/tvReason" />
    <TextView
        android:textSize="@dimen/dp_14"
        android:textColor="@color/color_999999"
        android:gravity="center"
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_below="@id/line" />
    <TextView
        android:textSize="@dimen/dp_14"
        android:textColor="@color/color_999999"
        android:gravity="center|right"
        android:id="@+id/tvTime"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_toRightOf="@id/tvDate"
        android:layout_below="@id/line"
        android:layout_alignParentRight="true" />
</RelativeLayout>
