<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:text="@string/my"
        android:background="@color/main_color"
        android:gravity="center"
        style="@style/text_style_16_6a3906"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:contentDescription="@null"
                android:src="@mipmap/icon_xiaotian"/>


            <TextView
                android:id="@+id/tv_department"
                style="@style/text_style_14_323232"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_8" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@android:color/white"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/rlt_nick_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="#FFFFFFFF"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/pre_tv_nick_name"
                    style="@style/text_style_14_323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/iconl_nickname"
                    android:drawablePadding="@dimen/dp_14"
                    android:text="@string/nick_name" />


                <TextView
                    android:id="@+id/tv_nick_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@+id/pre_tv_nick_name"
                    android:drawableRight="@mipmap/icon_extension"
                    android:gravity="right"
                    style="@style/text_style_13_747474" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_48"
                android:background="@color/color_dadada" />


            <RelativeLayout
                android:id="@+id/rlt_sex"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="#FFFFFFFF"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/pre_tv_sex"
                    style="@style/text_style_14_323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/iconl_sex"
                    android:drawablePadding="@dimen/dp_14"
                    android:text="性别" />


                <TextView
                    android:id="@+id/tv_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@+id/pre_tv_sex"
                    android:drawableRight="@mipmap/icon_extension"
                    android:gravity="right"
                    android:text="保密"
                    style="@style/text_style_13_747474" />
            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_48"
                android:background="@color/color_dadada" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    android:id="@+id/pre_tv_account"
                    style="@style/text_style_14_323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_user"
                    android:drawablePadding="@dimen/dp_14"
                    android:text="账号" />

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_toRightOf="@+id/pre_tv_account"
                    android:gravity="right"
                    style="@style/text_style_13_747474" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/dp_48"
                android:background="@color/color_dadada" />

            <RelativeLayout
                android:id="@+id/rlt_set_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_45"
                android:background="@color/white"
                android:paddingLeft="@dimen/dp_14"
                android:paddingRight="@dimen/dp_14">

                <TextView
                    style="@style/text_style_14_323232"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_password"
                    android:drawablePadding="@dimen/dp_14"
                    android:text="修改密码" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:drawableRight="@mipmap/icon_extension"
                    android:gravity="right"
                    style="@style/text_style_13_747474" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_12" />

        <RelativeLayout
            android:id="@+id/rlt_approval_record"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="#FFFFFFFF"
            android:paddingLeft="@dimen/dp_14"
            android:paddingRight="@dimen/dp_14">

            <TextView
                style="@style/text_style_14_323232"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_14"
                android:text="审批记录" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:drawableRight="@mipmap/icon_extension"
                android:gravity="right"
                style="@style/text_style_13_747474" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_exit_login"
            style="@style/text_style_14_323232"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:layout_marginTop="@dimen/dp_14"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="退出当前账号" />

    </LinearLayout>



</LinearLayout>